@model IEnumerable<POSWeb.Models.Customer>
@{
    int i = 0;
}

<h1>Customers List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
</p>

<table class="table table-hover w-100">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>PhNo</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(i += 1)
                </td>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-success">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-warning">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>