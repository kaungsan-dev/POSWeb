@model POSWeb.Models.Customer

<h1>Edit Customer</h1>

<form asp-action="Edit">

    <input type="hidden" asp-for="CustomerID" />

    <div class="row">

        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Customer Name</label>
                <input asp-for="CustomerName" class="form-control" required />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhNo" class="control-label">Phone Number</label>
                <input asp-for="PhNo" class="form-control" type="tel" required />
                <span asp-validation-for="PhNo" class="text-danger"></span>
            </div>
        </div>

        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>

    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}